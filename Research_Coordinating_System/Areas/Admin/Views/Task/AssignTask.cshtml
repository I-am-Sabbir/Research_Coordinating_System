@model Research_Coordinating_System.Areas.Admin.Models.TaskModel.AssignTaskModel
@{
    ViewData["Title"] = "AssignTask";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/Trumbowyg-master/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />

<h1>AssignTask</h1>

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">New Task</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="col-12">
                    <div class="card-header">
                        <h3 class="card-title">Submit Paper Details</h3>
                    </div>
                    <div class="card-body">
                        <partial name="_ActionMessage" model="@Model.Response" />
                        <form asp-area="Admin" asp-controller="Task" asp-action="AssignTask" method="post" class="form-horizontal" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="TaskName" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="TaskName" class="form-control" />
                                    <span asp-validation-for="TaskName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="AssignesTo" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <select asp-for="AssignesTo" asp-items="@Model.GetUserList()" class="form-control">
                                        <option>Please select one</option>
                                    </select>
                                    <span asp-validation-for="AssignesTo" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                @*Hidden Input Without label*@
                                <div class="col-md-10">
                                    <input type="hidden" asp-for="TaskAuthor" value="@ViewBag.TaskAuthor" class="form-control" />
                                    <span asp-validation-for="TaskAuthor" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="DeadLine" class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input asp-for="DeadLine" class="form-control" />
                                    <span asp-validation-for="DeadLine" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" class="btn btn-default" value="Submit" />
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
</section>

</div>
